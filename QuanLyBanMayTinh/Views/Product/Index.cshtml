@model IEnumerable<QuanLyBanMayTinh.Models.Product>
<h2>Tất cả sản phẩm</h2>
<table>
    <tr><th>Tên</th><th>Giá</th><th></th></tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Name</td>
            <td>@item.Price ₫</td>
            <td><a asp-action="Details" asp-route-id="@item.Id">Chi tiết</a></td>
        </tr>
    }
</table>
